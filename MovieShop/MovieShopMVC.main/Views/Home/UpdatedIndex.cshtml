@{
    Layout = "_Layout";
    var movieModel = ViewBag.items as List<MoviesResponseModel>;
}

<div class="card-container">
    @foreach (var item in movieModel)
    {
        @await Html.PartialAsync("_MovieCard", item)
    }
</div>
<div style="display: flex; justify-content: center;">
    @if (ViewBag.TotalPages > 1)
    {
    <nav aria-label="Page navigation">
        <ul class="pagination">
            <!-- First Page Link -->
            @if (ViewBag.CurrentPage > 1)
            {
                <li class="page-item">

                    <a class="page-link" href="@Url.Action("UpdatedIndex", "Home", new { selectedGenre = ViewBag.SelectedGenreId,pageNumber = 1 })">First</a>

                </li>
            }

            <!-- Previous Page Link -->
            <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">

                <a class="page-link" href="@Url.Action("UpdatedIndex", "Home", new { selectedGenre = ViewBag.SelectedGenreId, pageNumber = ViewBag.CurrentPage - 1 })">Previous</a>

            </li>

     

            <!-- Page Numbers -->
            @for (int i = Math.Max(1, ViewBag.CurrentPage - 2); i <= Math.Min(ViewBag.TotalPages, ViewBag.CurrentPage + 2); i++)
            {
                
                <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">

                    <a class="page-link" href="@Url.Action("UpdatedIndex", "Home", new { selectedGenre = ViewBag.SelectedGenreId, pageNumber = i })">@i</a>

                </li>
            }

            <!-- Next Page Link -->
            <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                
                <a class="page-link" href="@Url.Action("UpdatedIndex", "Home", new { selectedGenre = ViewBag.SelectedGenreId, pageNumber = ViewBag.CurrentPage + 1 })">Next</a>

            </li>


            

            <!-- Last Page Link -->
            @if (ViewBag.CurrentPage < ViewBag.TotalPages)
            {
                <li class="page-item">

                    <a class="page-link" href="@Url.Action("UpdatedIndex", "Home", new { selectedGenre = ViewBag.SelectedGenreId, pageNumber = ViewBag.TotalPages })">Last</a>

                </li>
            }
        </ul>
    </nav>
    }
</div>

